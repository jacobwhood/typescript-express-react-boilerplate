{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "allowJs": true,
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
